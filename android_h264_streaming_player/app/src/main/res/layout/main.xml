<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
   

   <com.obana.h264player.H264SurfaceView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/h264View" />
    <ImageView android:layout_gravity="top|left" android:id="@+id/recording_view" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="40dp"/>

    <ImageButton android:layout_gravity="bottom|right" android:id="@+id/setting_button" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="40dp" android:layout_marginRight="20dp" android:src="@drawable/button_settings"/>
    <ImageButton android:layout_gravity="bottom|right" android:id="@+id/record_button" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="40dp" android:layout_marginRight="80dp" android:src="@drawable/video_record_stop"/>
</FrameLayout>
